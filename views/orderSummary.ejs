<!DOCTYPE html>
<html>
<head>
    <title>Cloup_co - Resumen de la Venta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="res/css/custom.css">
</head>
<body>
    <div class="container my-5">
        <h1>Resumen de la Venta</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% orderData.forEach(item => { %>
                    <tr>
                        <td><%= item.nombre %></td>
                        <td>$<%= item.precio.toFixed(2) %></td>
                        <td><%= item.cantidad %></td>
                        <td>$<%= (item.precio * item.cantidad).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="d-flex justify-content-end">
            <h3>Total: $<%= total.toFixed(2) %></h3>
        </div>
        <button id="confirmDeleteCart" class="btn btn-danger">Confirmar y Eliminar Carrito</button>

<script>
document.getElementById('confirmDeleteCart').addEventListener('click', () => {
    fetch('/confirm-delete-cart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            cartId: '<%= cartId %>',
            confirm: true
        })
    })
    .then(response => {
        if (response.ok) {
            alert('Carrito eliminado exitosamente');
        } else {
            alert('Error al eliminar el carrito');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Ocurri√≥ un error al eliminar el carrito');
    });
});
</script>
    </div>
</body>
</html>